<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/name_backgroung"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/play3"
            android:layout_width="292dp"
            android:layout_height="281dp"
            android:layout_below="@+id/sample"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="369dp"
            android:layout_marginEnd="61dp"
            android:background="@drawable/button" />

        <TextView
            android:id="@+id/sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/creepster"
            android:text="Tic\nTac\nToe"
            android:textAlignment="center"
            android:textColor="#3455eb"
            android:textSize="60dp"
            tools:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </RelativeLayout>
</LinearLayout>